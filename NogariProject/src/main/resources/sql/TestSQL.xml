<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="nogari.test.mapper.TestMapper">

    <select id="selectTest" resultType="HashMap">
        SELECT * 
          FROM MEMBER_KTW
    </select>
    
    <insert id="insertTest" parameterType="hashmap">
        INSERT 
          INTO MEMBER_KTW
        VALUES (#{id}, #{name}, #{password})
    </insert>
    
    <delete id="deleteTest" parameterType="hashmap">
        DELETE 
          FROM MEMBER_KTW 
         WHERE ID = #{id} 
    </delete>
    
    <update id="updateTest" parameterType="hashmap">
        UPDATE MEMBER_KTW
           SET NAME     = #{name}
             , PASSWORD = #{password}
         WHERE ID       = #{id}
    </update>
    
</mapper>